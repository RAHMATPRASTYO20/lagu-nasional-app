<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LirikActivity"
    android:background="@drawable/bg_lirik_lagu">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_judul_lagu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Judul Lagu"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/qarmic_sans_abridged" />

                <TextView
                    android:id="@+id/tv_pencipta_lagu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Pencipta"
                    android:textStyle="italic"
                    android:textSize="14dp"
                    android:fontFamily="@font/qarmic_sans_abridged"/>

                <TextView
                    android:id="@+id/tv_lirik_lagu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lirik Lagu"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/qarmic_sans_abridged"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:gravity="start|bottom">

                <ImageButton
                    android:id="@+id/btn_back_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_back_button"
                    android:padding="10dp"
                    android:shadowColor="@color/TransparentGrey"
                    android:shadowDx="3"
                    android:shadowDy="-3"
                    android:shadowRadius="1.5"
                    android:src="@drawable/ic_reply" />

                <ImageButton
                    android:id="@+id/btn_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/bg_youtube"
                    android:src="@drawable/ic_play_arrow" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</ScrollView>